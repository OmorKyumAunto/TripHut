<?xml version="1.0" encoding="UTF-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="10dp"
    android:layout_gravity="center"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    android:background="@drawable/backbutton"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="@drawable/backbutton"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            android:id="@+id/tourimg"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/leaf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/placetext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="This is Demo Name"
            android:layout_below="@id/tourimg"
            android:fontFamily="@font/rubik"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/hoteltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/placetext"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik"
            android:gravity="center"
            android:text="This is Course Name"

            android:textSize="15dp" />

        <TextView
            android:id="@+id/duratext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hoteltext"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="This is Email Name"
            android:fontFamily="@font/rubik"

            android:textSize="15dp" />
        <TextView
            android:id="@+id/costtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/duratext"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik"
            android:text="This is Email Name"
            android:gravity="center"
            android:textSize="15dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>